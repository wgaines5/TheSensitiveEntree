<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/RecipeNameDetails_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/offWhite_textView"
        android:layout_width="367dp"
        android:layout_height="66dp"
        android:background="@drawable/textview1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/Servings_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_servings"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView" />

    <TextView
        android:id="@+id/ServingSize_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_servingsize"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView" />

    <TextView
        android:id="@+id/Time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_time"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView" />

    <TextView
        android:id="@+id/RecipeCalories_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_calories"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView" />

    <TextView
        android:id="@+id/recipeInstruct_textView"
        android:layout_width="370dp"
        android:layout_height="268dp"
        android:background="@drawable/dropdown1"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_directions"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.798" />

    <TextView
        android:id="@+id/recipeDirect_textView"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:background="@drawable/textview2"
        android:fontFamily="@font/playfair_display"
        android:text="@string/recipe_instructions"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.436" />

    <Button
        android:id="@+id/ingredSub_button"
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:background="@drawable/button3"
        android:fontFamily="@font/playfair_display"
        android:onClick="onClickIngredientSubs"
        android:text="@string/ingredSub_button"
        android:textAlignment="center"
        android:textColor="@color/almost_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.972" />

    <TextView
        android:id="@+id/greenLine_textView"
        android:layout_width="375dp"
        android:layout_height="8dp"
        android:background="@drawable/button3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.384" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recipeDetails_toolbar"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:background="@color/light_green"
        app:layout_constraintBottom_toTopOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/recipeDetails_scrollView"
        android:layout_width="368dp"
        android:layout_height="298dp"
        android:contentDescription="@string/scroll_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.779">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/resourcebutton_button"
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:background="@drawable/button3"
        android:fontFamily="@font/playfair_display"
        android:text="Resources"
        android:textColor="@color/almost_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:layout_constraintVertical_bias="0.972" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="372dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecipeNameDetails_textView"
        app:srcCompat="@drawable/recipe_pic" />

    <Button
        android:id="@+id/detBack_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/backbutton_icon_foreground"
        android:contentDescription="@string/back_button"
        android:onClick="onClickBack"
        app:layout_constraintEnd_toEndOf="@+id/recipeDetails_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hamDet_button"
        android:layout_width="70dp"
        android:layout_height="49dp"
        android:background="@drawable/hamburgericon"
        android:contentDescription="@string/hamburger_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>