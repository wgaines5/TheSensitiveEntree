<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addRecipe_toolbar"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:background="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newRecipe_textView"
        android:layout_width="176dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/new_recipe"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_toolbar" />

    <TextView
        android:id="@+id/greenBar2_textView"
        android:layout_width="375dp"
        android:layout_height="8dp"
        android:background="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newRecipe_textView" />

    <TextView
        android:id="@+id/newRecipeName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_name"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <TextView
        android:id="@+id/newTime_textView"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_time"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <TextView
        android:id="@+id/newServings_textView"
        android:layout_width="121dp"
        android:layout_height="28dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_servingsize"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <TextView
        android:id="@+id/newCalories_textView"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_calories"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <TextView
        android:id="@+id/newServing_textView"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_servings"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <TextView
        android:id="@+id/newInstructions_textView"
        android:layout_width="332dp"
        android:layout_height="36dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/newRecipe_instructions"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <EditText
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="220dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Time"
        android:inputType="time"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Enter name here"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Serving Size"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Servings"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newRecipe_textView" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="220dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Calories"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="331dp"
        android:layout_height="243dp"
        android:layout_marginTop="324dp"
        android:background="@color/off_white"
        android:ems="10"
        android:fontFamily="@font/playfair_display"
        android:hint="Please specify ingredients and instructions"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenBar2_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>